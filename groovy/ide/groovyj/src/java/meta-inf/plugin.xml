<idea-plugin url="http://groovy.codehaus.org/">

	<name>Groovy IntelliJ Plugin</name>
	<description>Plugin providing support for developping Groovy code.</description>
	<version>0.1</version>
	<vendor email="glaforge@codehaus.org">Guillaume Laforge</vendor>

	<change-notes>
		<![CDATA[<html><ul><li>First beta version of the plugin.</li></ul></html>]]>
	</change-notes>

	<idea-version since-build="2233"/>

	<application-components>
		<component>
			<implementation-class>org.codehaus.groovy.intellij.GroovyJPlugin</implementation-class>
		</component>
	</application-components>

	<project-components>
		<component>
			<implementation-class>org.codehaus.groovy.intellij.GroovyJProjectComponent</implementation-class>
		</component>
	</project-components>

	<actions>

		<action id="RunGroovyClassOrScript" class="org.codehaus.groovy.intellij.RunAction"
			text="Run Groovy script or class" description="Run Groovy script or class">
			<keyboard-shortcut first-keystroke="ctrl alt G" second-keystroke="R" keymap="$default"/>
			<add-to-group group-id="RunMenu" anchor="after" relative-to-action="Run"/>
		</action>

	</actions>

</idea-plugin>
