<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE idea-plugin PUBLIC "-//IntelliJ Technology Network//DTD Plugin Manager 0.1//EN" "http://plugins.intellij.net/plugin.dtd">

<idea-plugin url="@PROJECT.HOMEPAGE@">

    <name>@PROJECT.TITLE@</name>
    <description>@PROJECT.DESCRIPTION@</description>
    <version>@PROJECT.VERSION@</version>
    <vendor url="@PROJECT.VENDOR.HOMEPAGE@" email="@PROJECT.VENDOR.EMAIL@">@PROJECT.VENDOR@</vendor>
    <change-notes>@PROJECT.CHANGE-NOTES@</change-notes>
    <idea-version since-build="@PROJECT.IDEA.SINCE-BUILD@"/>

    <project-components>
        <component>
            <implementation-class>org.codehaus.groovy.intellij.GroovyJProjectComponent</implementation-class>
            <option name="workspace" value="true"/>
        </component>
    </project-components>

    <application-components>
        <component>
            <implementation-class>groovy.idesupport.idea.GroovySupportLoader</implementation-class>
        </component>
    </application-components>

    <actions>
        <action id="Groovy::RunGroovyClassOrScript"
                class="org.codehaus.groovy.intellij.actions.RunAction"
                text="_Run Groovy script or class"
                description="Run Groovy script or class"
                icon="/icons/groovy_16x16.png">
            <keyboard-shortcut first-keystroke="ctrl alt G" second-keystroke="R" keymap="$default"/>
            <add-to-group group-id="MainToolBar" anchor="after" relative-to-action="RunnerActions"/>
        </action>
        <group id="Groovy::Menu" text="Groov_y" popup="true">
            <reference id="Groovy::RunGroovyClassOrScript"/>
            <add-to-group group-id="MainMenu" anchor="after" relative-to-action="RunMenu"/>
            <add-to-group group-id="RunContextPopupGroup" anchor="last"/>
        </group>
    </actions>

</idea-plugin>
