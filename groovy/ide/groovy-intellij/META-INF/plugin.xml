<idea-plugin>

  <name>Groovy</name>

  <description>Support for Groovy development</description>

  <version>1.0</version>

  <vendor>CodeHaus</vendor>

  <idea-version min="3.0" max="3.1"/>

  <project-components>

    <component>

      <interface-class>org.codehaus.groovy.intellij.GroovyPlugin</interface-class>
      <implementation-class>org.codehaus.groovy.intellij.GroovyPlugin</implementation-class>
      
    </component>

    <component>

      <interface-class>org.codehaus.groovy.intellij.configuration.GroovyConfiguration</interface-class>
      <implementation-class>org.codehaus.groovy.intellij.configuration.DefaultGroovyConfigurationImpl</implementation-class>
      
    </component>

  </project-components>

   <actions>

     
    <group id ="GroovyPlugin" text ="Groovy" popup="true">

   <action id="Groovy.GroovyPlugin.GroovyRunAction" class="org.codehaus.groovy.intellij.actions.GroovyRunAction" text="Groovy" description="Run the Groovy script">
      <keyboard-shortcut first-keystroke="control alt G" second-keystroke="R" keymap="$default"/>
    </action>

     <action id="Groovy.GroovyPlugin.GroovyRunSelectionAction" class="org.codehaus.groovy.intellij.actions.GroovyRunSelectionAction" text="Groovy Evaluation" description="Evaluate selected Groovy text">
         <keyboard-shortcut first-keystroke="control alt G" second-keystroke="E" keymap="$default"/>
     </action>

     <action id="Groovy.GroovyPlugin.GroovyCompileAction" class="org.codehaus.groovy.intellij.actions.GroovyCompileAction" text="Groovyc" description="Compile a Groovy script">
       <keyboard-shortcut first-keystroke="control alt G" second-keystroke="C" keymap="$default"/>
     </action>
    
      <add-to-group group-id="ProjectViewPopupMenu" anchor ="last"/>
      <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="CutCopyPasteGroup"/>

    </group>

  </actions>

</idea-plugin>